<h1>Photo Sharing App</h1>

<ol>
  <% @posts.each do |post| %>
    <li>
      <% if post.photo.present?%>
        <%= image_tag post.photo(:thumb) %><br>
        <% end %>
        <%= link_to  "#{post.name}", post_path(post) %>

    </li>
  <% end %>
</ol>

<%= link_to "Create a new post", new_post_path, :class => "btn btn-primary" %>
