<%= render("layouts/errors", :object => @post) %>

<%= form_for @post, :html => { :multipart => true } do |f| %>
  <div class="form-group">
    <%= f.label :name %></br>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :description %></br>
    <%= f.text_area :description %>
  </div>

  <div class="form-group">
    <%= f.label :photo, "Photo" %></br>
    <%= f.file_field :photo %>
  </div>

  <%= f.submit(:class => "btn btn-primary") %>
<% end %>
