<%= render("layouts/errors", :object => @post) %>

<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :name %></br>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :description %></br>
    <%= f.text_area :description %>
  </div>

  <%= f.submit(:class => "btn btn-primary") %>
<% end %>
